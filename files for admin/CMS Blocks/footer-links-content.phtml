    <div
      class="footer-links-content__sublinks"
      style=""
      x-ref="contacts"
      x-bind:style="selected == 'contacts' ? 'max-height: ' + $refs.contacts.scrollHeight + 'px' : ''"
    >
        {{widget type="Magento\Cms\Block\Widget\Block" template="widget/static_block/default.phtml" block_id="footer_info"}}
    </div>
