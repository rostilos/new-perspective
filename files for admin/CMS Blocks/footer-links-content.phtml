  </div>
  <!-- Company -->
  <div
    class="footer-links-content__col has-sublinks"
    data-role="collapsible"
    :class="{'active': selected == 'company'}"
  >
    <div class="h4 footer-links-content__link has-sublinks">
      <a href="{{store url='company'}}">Company</a>
      <div data-role="trigger" @click="selected !== 'company' ? selected = 'company' : selected = null"></div>
    </div>
    <div
      class="footer-links-content__sublinks"
      style=""
      x-ref="company"
      x-bind:style="selected == 'company' ? 'max-height: ' + $refs.company.scrollHeight + 'px' : ''"
    >
      <div class="footer-links-content__sublink">
        <a href="{{store url='company'}}">About the team</a>
      </div>
      <!-- Страницы еще нет -->
      <!-- <div class="footer-links-content__sublink">
