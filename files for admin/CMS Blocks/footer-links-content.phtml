<div class="footer-links-content" x-data="{selected:null}">
  <!-- Main navigation links -->
  <div class="footer-links-content__col">
    <div class="h4 footer-links-content__link">
      <a href="{{store url='work'}}">Work</a>
    </div>
    <div class="h4 footer-links-content__link">
      <a href="{{store url='blog'}}">Blog</a>
