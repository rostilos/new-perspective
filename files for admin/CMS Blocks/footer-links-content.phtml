        <a href="{{store url='careers'}}">Careers</a>
      </div>
      <div class="h4 footer-links-content__sublink">
        <a href="{{store url='privacy-policy'}}">Privacy Policy</a>
      </div>
      <div class="footer-links-content__sublink">
        <a href="{{store url='terms-and-conditions'}}">Terms of Use</a>
      </div>
      <div class="h4 footer-links-content__sublink">
        <a href="{{store url='cookie-policy'}}">Cookie policy</a>
      </div>
    </div>
  </div>
  <!-- Services -->
  <div
    class="footer-links-content__col has-sublinks"
    data-role="collapsible"
    :class="{'active': selected == 'services'}"
  >
    <div class="h4 footer-links-content__link has-sublinks">
      <a href="{{store url='services'}}">Services</a>
      <div data-role="trigger" @click="selected !== 'services' ? selected = 'services' : selected = null"></div>
    </div>
    <div
      class="footer-links-content__sublinks"
      style=""
      x-ref="services"
      x-bind:style="selected == 'services' ? 'max-height: ' + $refs.services.scrollHeight + 'px' : ''"
    >
      <div class="footer-links-content__sublink">
        <a href="{{store url='services'}}#services-design-section">Web Design</a>
      </div>
      <div class="footer-links-content__sublink">
        <a href="{{store url='services'}}#services-development-section">Magento Development</a>
      </div>
      <div class="footer-links-content__sublink">
        <a href="{{store url='services'}}#services-migration-section">Magento 2 Migration</a>
