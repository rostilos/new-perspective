      </div>
      <div class="footer-links-content__sublink">
        <a href="{{store url='services'}}#services-support-section">Magento Support</a>
      </div>
      <div class="footer-links-content__sublink">
        <a href="{{store url='services'}}#services-optimization-section">Server & Magento Optimization</a>
      </div>
      <div class="footer-links-content__sublink">
        <a href="{{store url='services/implementation-google-analytics-4-on-magento-2-with-gtm'}}">Implementation Google Analytics 4</a>
      </div>
      
    </div>
  </div>

  <!-- Contacts -->
  <div
    class="footer-links-content__col has-sublinks"
    data-role="collapsible"
    :class="{'active': selected == 'contacts'}"
  >
    <div class="h4 footer-links-content__link has-sublinks">
      <a href="{{store url='contacts'}}">Contacts</a>
      <div data-role="trigger" @click="selected !== 'contacts' ? selected = 'contacts' : selected = null"></div>
